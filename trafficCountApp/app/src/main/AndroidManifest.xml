<?xml version="1.0" encoding="utf-8"?>
<manifest  xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.delaneyt.trafficcountapp">
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!--uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LocationSettingsActivity"
            android:label="@string/location_settings_activity_name"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CountActivity"
            android:label="@string/jnt_type_select_fragment_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data
                    android:mimeType="image/*"
                    android:scheme="android.resource" >
                </data>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ThreeArmJntActivity"
            android:label="@string/three_arm_jnt_activity_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PhotoActivity"
            android:label="@string/photo_activity_name">
            <intent-filter>
                <action android:name="com.example.delaneyt.trafficcountapp.PhotoActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GPSTrackingActivity"
            android:label="@string/gps_activity_name" >
            <intent-filter>
                <action android:name="com.example.delaneyt.trafficcountapp.GPSTrackingActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DbJntAddActivity"
            android:label="@string/db_jnt_add_activity_name" >
            <intent-filter>
                <action android:name="com.example.delaneyt.trafficcountapp.DbJntAddActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>






